<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:TestApp.Properties"
        Title="{x:Static res:Resources.Window_Title}"
        Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="{x:Static res:Resources.App_Name}" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{x:Static res:Resources.App_Version}" FontSize="12" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="{x:Static res:Resources.Tab_Dashboard}">
                <StackPanel Margin="10">
                    <TextBlock Text="{x:Static res:Resources.Dashboard_Welcome}" FontSize="16"/>
                    <Button Content="{x:Static res:Resources.Button_Refresh}" Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="{x:Static res:Resources.Tab_Settings}">
                <StackPanel Margin="10">
                    <Label Content="{x:Static res:Resources.Settings_Language}"/>
                    <ComboBox SelectedIndex="0" Margin="0,5,0,0"/>

                    <Label Content="{x:Static res:Resources.Settings_Theme}" Margin="0,10,0,0"/>
                    <ComboBox SelectedIndex="0" Margin="0,5,0,0"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{x:Static res:Resources.Status_Ready}"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Missing keys - for testing detection -->
        <!-- These don't exist in TestResource.resx -->
        <TextBlock Text="{x:Static res:Resources.MissingXamlKey1}" Visibility="Collapsed"/>
        <Button Content="{x:Static res:Resources.MissingXamlKey2}" Visibility="Collapsed"/>
    </Grid>
</Window>
