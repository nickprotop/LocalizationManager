{
  "name": "localization-manager",
  "displayName": "LRM - .NET Localization",
  "description": "Manage .NET localization files (.resx and JSON) with real-time validation, translation, and code scanning",
  "version": "0.6.24",
  "icon": "images/icon.png",
  "publisher": "nickprotop",
  "repository": {
    "type": "git",
    "url": "https://github.com/nickprotop/LocalizationManager"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "localization",
    "resx",
    "json",
    "i18n",
    "i18next",
    "translation",
    "dotnet",
    "csharp",
    "internationalization",
    "resources",
    "l10n"
  ],
  "activationEvents": [
    "workspaceContains:**/*.resx",
    "workspaceContains:**/lrm.json",
    "workspaceContains:**/strings.json",
    "workspaceContains:**/strings.*.json",
    "workspaceContains:**/locales/**/*.json",
    "workspaceContains:**/translations/**/*.json",
    "workspaceContains:**/i18n/**/*.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lrm.scanCode",
        "title": "LRM: Scan Code for Localization Keys"
      },
      {
        "command": "lrm.validateResources",
        "title": "LRM: Validate Resources"
      },
      {
        "command": "lrm.openResourceEditor",
        "title": "LRM: Open Resource Editor"
      },
      {
        "command": "lrm.addKey",
        "title": "LRM: Add Key"
      },
      {
        "command": "lrm.translateMissing",
        "title": "LRM: Translate Missing Values"
      },
      {
        "command": "lrm.refreshResourceTree",
        "title": "LRM: Refresh Resource Tree"
      },
      {
        "command": "lrm.setResourcePath",
        "title": "LRM: Set Resource Path"
      },
      {
        "command": "lrm.restartBackend",
        "title": "LRM: Restart Backend"
      },
      {
        "command": "lrm.findUnusedKeys",
        "title": "LRM: Find Unused Keys"
      },
      {
        "command": "lrm.exportResources",
        "title": "LRM: Export Resources"
      },
      {
        "command": "lrm.importResources",
        "title": "LRM: Import Resources"
      },
      {
        "command": "lrm.showLogs",
        "title": "LRM: Show Backend Logs"
      },
      {
        "command": "lrm.openDashboard",
        "title": "LRM: Open Dashboard"
      },
      {
        "command": "lrm.openSettings",
        "title": "LRM: Open Settings"
      },
      {
        "command": "lrm.showKeyReferences",
        "title": "LRM: Show Key References"
      },
      {
        "command": "lrm.showMissingLanguages",
        "title": "LRM: Show Missing Languages"
      },
      {
        "command": "lrm.translateKeyFromLens",
        "title": "LRM: Translate Key"
      },
      {
        "command": "lrm.editKeyFromLens",
        "title": "LRM: Edit Key"
      },
      {
        "command": "lrm.deleteUnusedKey",
        "title": "LRM: Delete Unused Key"
      }
    ],
    "configuration": {
      "title": "Localization Manager",
      "properties": {
        "lrm.resourcePath": {
          "type": "string",
          "default": null,
          "description": "Path to resources folder containing .resx or JSON files (auto-detected if not set)"
        },
        "lrm.enableRealtimeScan": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time code scanning as you type (debounced 500ms)"
        },
        "lrm.scanOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Scan code files for missing localization keys on save"
        },
        "lrm.translationProvider": {
          "type": "string",
          "enum": [
            "google",
            "azure",
            "aws",
            "deepl",
            "openai",
            "anthropic",
            "lingva",
            "mymemory"
          ],
          "default": "mymemory",
          "description": "Default translation provider"
        },
        "lrm.autoOpenBrowser": {
          "type": "boolean",
          "default": false,
          "description": "Auto-open browser when starting web UI"
        },
        "lrm.scanCSharp": {
          "type": "boolean",
          "default": true,
          "description": "Include C# files (.cs) in code scanning"
        },
        "lrm.scanRazor": {
          "type": "boolean",
          "default": true,
          "description": "Include Razor files (.razor, .cshtml) in code scanning"
        },
        "lrm.scanXaml": {
          "type": "boolean",
          "default": true,
          "description": "Include XAML files (.xaml) in code scanning"
        },
        "lrm.resourceClasses": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["Resources", "Strings", "Labels", "Messages"],
          "description": "Resource class names to detect in code"
        },
        "lrm.localizationMethods": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["GetString", "GetLocalizedString", "Translate", "L", "T"],
          "description": "Localization method names to detect in code"
        },
        "lrm.enablePlaceholderValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable validation of placeholders in resource strings"
        },
        "lrm.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens for localization keys in resource files (.resx, JSON) and code files"
        },
        "lrm.codeLens.showReferences": {
          "type": "boolean",
          "default": true,
          "description": "Show reference count in CodeLens (e.g., '12 references')"
        },
        "lrm.codeLens.showCoverage": {
          "type": "boolean",
          "default": true,
          "description": "Show language coverage in CodeLens (e.g., '3/5 languages')"
        },
        "lrm.codeLens.showTranslate": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Translate' action in CodeLens"
        },
        "lrm.codeLens.showValue": {
          "type": "boolean",
          "default": true,
          "description": "Show key value in CodeLens for code files"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "lrm.json",
        "url": "./schemas/lrm.schema.json"
      },
      {
        "fileMatch": "**/lrm.json",
        "url": "./schemas/lrm.schema.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "lrmResourceTree",
          "name": "Localization Resources",
          "when": "lrm.hasResources"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "lrm.addKey",
          "when": "view == lrmResourceTree"
        }
      ],
      "commandPalette": [
        {
          "command": "lrm.scanCode"
        },
        {
          "command": "lrm.validateResources"
        },
        {
          "command": "lrm.openResourceEditor"
        },
        {
          "command": "lrm.addKey"
        },
        {
          "command": "lrm.translateMissing"
        },
        {
          "command": "lrm.setResourcePath"
        },
        {
          "command": "lrm.restartBackend"
        },
        {
          "command": "lrm.findUnusedKeys"
        },
        {
          "command": "lrm.exportResources"
        },
        {
          "command": "lrm.importResources"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "bundle-binaries": "bash ./scripts/bundle-binaries.sh",
    "package:win32-x64": "bash ./scripts/package.sh win32-x64",
    "package:win32-arm64": "bash ./scripts/package.sh win32-arm64",
    "package:linux-x64": "bash ./scripts/package.sh linux-x64",
    "package:linux-arm64": "bash ./scripts/package.sh linux-arm64",
    "package:darwin-x64": "bash ./scripts/package.sh darwin-x64",
    "package:darwin-arm64": "bash ./scripts/package.sh darwin-arm64",
    "package:all": "bash ./scripts/package-all.sh"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.40.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.20.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
