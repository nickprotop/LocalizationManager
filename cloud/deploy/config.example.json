{
  "$schema": "./config.schema.json",
  "server": {
    "urls": "http://0.0.0.0:8080",
    "environment": "Production",
    "baseUrl": "https://lrm-cloud.com",
    "cors": {
      "mode": "whitelist",
      "allowedOrigins": ["https://app.lrm-cloud.com", "https://lrm-cloud.com"],
      "allowCredentials": false
    }
  },
  "database": {
    "connectionString": "Host=lrmcloud-postgres;Port=5432;Database=lrmcloud;Username=lrm;Password=CHANGE_ME",
    "autoMigrate": true
  },
  "redis": {
    "connectionString": "lrmcloud-redis:6379,password=CHANGE_ME"
  },
  "storage": {
    "endpoint": "lrmcloud-minio:9000",
    "accessKey": "lrmcloud",
    "secretKey": "CHANGE_ME",
    "bucket": "lrmcloud",
    "useSSL": false
  },
  "encryption": {
    "tokenKey": "CHANGE_ME_BASE64_KEY"
  },
  "apiKeyMasterSecret": "CHANGE_ME_LONG_RANDOM_STRING_FOR_API_KEY_ENCRYPTION",
  "auth": {
    "jwtSecret": "CHANGE_ME_LONG_RANDOM_STRING",
    "jwtExpiryHours": 1,
    "refreshTokenExpiryDays": 7,
    "githubClientId": "",
    "githubClientSecret": "",
    "emailVerificationExpiryHours": 24,
    "passwordResetExpiryHours": 1,
    "passwordRequirements": {
      "minLength": 12,
      "requireUppercase": true,
      "requireLowercase": true,
      "requireDigit": true,
      "requireSpecialChar": true
    }
  },
  "mail": {
    "host": "localhost",
    "port": 25,
    "username": "",
    "password": "",
    "fromAddress": "noreply@lrm-cloud.com",
    "fromName": "LRM Cloud"
  },
  "features": {
    "registration": true,
    "githubSync": true,
    "freeTranslations": true
  },
  "limits": {
    "freeTranslationChars": 10000,
    "freeOtherChars": 50000,
    "freeMaxProjects": 5,
    "freeMaxApiKeys": 3,
    "teamTranslationChars": 100000,
    "teamOtherChars": 500000,
    "teamMaxMembers": 20,
    "teamMaxApiKeys": 10,
    "enterpriseTranslationChars": 10000000,
    "enterpriseOtherChars": 50000000,
    "maxKeysPerProject": 10000
  }
}
